{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "node_modules": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "vendor": {
      "type": "string"
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["directory", "file"]
          },
          "destination": {
            "type": "string"
          },
          "source": {
            "type": "string"
          }
        },
        "required": ["type", "destination", "source"],
        "additionalProperties": false
      }
    },
    "setup-command": {
      "type": "string"
    },
    "database-seeders": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "homepage": {
      "type": "string"
    }
  },
  "required": ["name", "vendor"],
  "additionalProperties": false
}
